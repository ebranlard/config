{
    "workbench.colorTheme": "Default Light+",
    "editor.cursorStyle": "block",
    "zenMode.hideLineNumbers": false,
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": false, // VS Code give different colors [ ( )]
    "editor.fontFamily": "'DejaVu Sans Mono for Powerline', monospace",
    "editor.fontSize": 13,
    "workbench.colorCustomizations": {
      "tab.activeBackground": "#e5e5e5",
      "tab.inactiveBackground": "#D0D0D0",
      "editorLineNumber.foreground": "#707070", // LineNr guifg
      "editorLineNumber.background": "#d6d3d6",   // LineNr guibg
      "editorLineNumber.activeForeground": "#000000",
      "editor.lineHighlightBackground": "#e5e5e5", // ColorColumn guibg
      "editor.selectionBackground": "#D0D0D0", // Visual guibg
      "editorCursor.background": "#909090", // Cursor guibg
      "editorCursor.foreground": "#000000", // Cursor guifg
      "editor.foldBackground": "#e5e5e580", // Folded guibg with transparency
      "editor.foldForeground": "#218a21", // Folded guifg
      "background": "#F0F0F0",
      "editor.background": "#F0F0F0",
      "editor.foreground": "#000000",
      "diffEditorOverview.removedForeground": "#00AA00",
      "diffEditorOverview.insertedBackground":  "#cffdd0",
      "diffEditorOverview.insertedForeground": "#00AA00",
      "editor.selectionHighlightBackground": "#FFFF0080", 
      "symbolIcon.stringForeground": "#000000",
      // --- Terminal
      "terminal.background": "#000000",
      "terminal.foreground": "#FFFFFF",
      // --- Activity Bar
      "activityBar.background": "#293531",
      "editorGutter.background": "#d6d3d6", // SignColumn guibg
      "statusBar.background": "#b0b0b0", // StatusLine guibg
      "statusBar.foreground": "#000000", // StatusLine guifg
      "statusBar.noFolderBackground": "#d6d3d6", // StatusLineNC guibg
      "statusBar.noFolderForeground": "#606060", // StatusLineNC guifg
      "editorGroup.border": "#b0b0b0", // VertSplit guibg
      "dropdown.background": "#b0b0b0", // Pmenu guibg
      "dropdown.foreground": "#000000", // Pmenu guifg
      "list.activeSelectionBackground": "#293531", // PmenuSel guibg
      "list.activeSelectionForeground": "#ffffff", // PmenuSel guifg
      "diffEditor.insertedTextBackground": "#cffdd080", // DiffAdd guibg
      "diffEditor.removedTextBackground": "#fdc3c380", // DiffDelete guibg
      "diffEditor.modifiedTextBackground": "#e4e9f0", // DiffChange guibg
      "diffEditor.activeLineBackground": "#c0d0f0" // DiffText guibg
    }
    ,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "comment", // Comment
            "settings": {
              "foreground": "#218a21"
            }
          },
          {
            "scope": "constant", // Constant
            "settings": {
              //"foreground": "#8c038c"
              "foreground": "#000000"
            }
          },
          {
            "scope": "constant.character", // String
            "settings": {
              "foreground": "#a520f7"
            }
          },
          {
            "scope": "constant.character.escape", // \n
            "settings": {
              "foreground": "#00300e",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "constant.language", // Special, e.g. Python None, True, False
            "settings": {
              "foreground": "#00300e",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "constant.numeric", // Number
            "settings": {
              "foreground": "#7b0000",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "constant.other.caps.python", // Number
            "settings": {
              "foreground": "#000000",
            }
          },
          {
            "scope": "entity.name.class",  // Change the color of class names
            "settings": {
              "foreground": "#d2691e",
              "fontStyle": "underline"
            }
          },
          {
            "scope": "entity.name.function",  // Change the color of function names
            "settings": {
              "foreground": "#151515",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.type.class",  // enumerate
            "settings": {
              "foreground": "#151515",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.other.attribute-name",  //
            "settings": {
              "foreground": "#FFFF00",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "keyword.codetag",  // Ex: NOTE, TODO 
            "settings": {
              "foreground": "#f07400", 
              "fontStyle": "bold" // Make keywords bold
            }
          },
          {
            "scope": "keyword.control",  // Statement, e.g. Python: import
            "settings": {
              "foreground": "#7b0000", 
              "fontStyle": "bold"
            }
          },
          {
            "scope": "keyword.control.flow", // Python: if, else
            "settings": {
              "foreground": "#00007b", 
              "fontStyle": "bold"
            }
          },
          {
              "scope": "keyword.operator", // Operators like = *
              "settings": {
                "foreground": "#000000", // Set the desired color
                "fontStyle": "bold"
              }
          },
          {
            "scope": "keyword.operator.logical", // Logical operators like "in", "not"
            "settings": {
              "foreground": "#FF4500", // Set the desired color
              "fontStyle": "bold"
            }
          },
          {
            "scope": "keyword.operator.logical.python", // Scope for "in" and "not"
            "settings": {
              "foreground": "#00007b",
              "fontStyle": "bold"
            }
          },
          {
              "scope": "keyword.other", //
              "settings": {
                "foreground": "#FFFF00", 
                "fontStyle": "bold"
              }
          },
          {
              "scope": "punctuation.section",
              "settings": {
                "foreground": "#000000"
              }
          },
          {
            "scope": "punctuation.match", // MatchParen
            "settings": {
              "foreground": "#7b0000",
              "fontStyle": "bold underline"
            }
          },
          {
            "scope": "variable.parameter",  // for instance function arguments
            "settings": {
              "foreground": "#000000"
            }
          },
          {
            "scope": "variable.language",  //this, super, self
            "settings": {
              "foreground": "#000000"
            }
          },
          {
            "scope": "variable.other",  // Change the color of other variables
            "settings": {
              "foreground": "#000000" // Set the desired color (e.g., black)
            }
          },
          {
            "scope": "variable.other.constant",//
            "settings": {
              "foreground": "#000000"
            }
          },
          {
            "scope": "variable.other.readwrite",//
            "settings": {
              "foreground": "#000000"
            }
          },
          {
             "scope": "storage",  // Change the color of storage keywords (e.g., var, let, const)
              "settings": {
              "foreground": "#ff4500", // Set the desired color (e.g., orange)
              "fontStyle": "bold"
            }
          },
          {
            "scope": "storage.type", // Type, e.g. Python def, class function
            "settings": {
              "foreground": "#00007b",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "storage.type.format", // e.g. :d :f 
            "settings": {
              "foreground": "#a520f7",
              "fontStyle": ""
            }
          },
          {
            "scope": "string", // String
            "settings": {
              "foreground": "#a520f7"
            }
          },
          {
            "scope": "support.type", // Exception, int, list
            "settings": {
              "foreground": "#5c095c", 
              "fontStyle": "bold"
            }
          },
          {
            "scope": "support.function", // e.g. __init__
            "settings": {
              "foreground": "#000000", 
              "fontStyle": "bold"
            }
          },
          {
            "scope": "support.function.builtin", // Built-in Python functions, print, len, enumerate, max
            "settings": {
              "foreground": "#000000", 
              "fontStyle": "bold"
            }
          },
          {
            "scope": "support.function.builtin.python", // Built-in Python functions, print, len, enumerate, max
            "settings": {
              "foreground": "#000000", 
              "fontStyle": "bold"
            }
          }
        ]
      },
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": [",", "s"], // Comma + s
        "commands": [
          {
            "command": "workbench.action.tasks.runTask",
            "args": "Manu Open Terminal" // Task label
          }
        ]
      },
//        "commands": ["workbench.action.terminal.newWithCwd"] // Open terminal
//        "commands": ["openInIntegratedTerminal"] // Open terminal
      {
        "before": ["<leader>", "d"],
        "after": ["d", "d"]
      },
      {
        "before": ["<C-n>"],
        "commands": [":nohl"]
      },
      {
        "before": ["K"],
        "commands": ["lineBreakInsert"],
        "silent": true
      },
      {
        "before": [",", "t"], // Comma + s
        "commands": ["workbench.action.terminal.toggleTerminal"] // Open terminal
      },
      {
        "before": [",", "m"], // Comma + m
        "commands": ["python.execInTerminal"] // Open terminal
      }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
      "<C-a>": false,
      "<C-w>": true,
      "<C-c>": true,
      "<C-v>": true,
      "<C-f>": true,
      "<C-n>": true,
      "<C-p>": true,
    },
    "extensions.experimental.affinity": {
      "vscodevim.vim": 1
    },
    "python.defaultInterpreterPath": "C:\\Bin\\Python\\Python312\\python.exe",
    "security.workspace.trust.enabled": false,
    "python.createEnvironment.trigger": "off",
    "terminal.integrated.tabs.enabled": false,
    "task.allowAutomaticTasks": "on",
    // NOTE: KEYBINDINGS are in keybindins.json
}