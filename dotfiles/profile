
PATH="$PATH:$HOME/Config/scripts"

# X specific commands
if xset q &>/dev/null; then
    # restart x
    setxkbmap -option terminate:ctrl_alt_bksp
    # special characters
    setxkbmap -option compose:ralt
    # Disable caps lock
    setxkbmap -option ctrl:nocaps  
    # x problems Ctrl+Alt+/
    setxkbmap -option grab:break_actions
fi
